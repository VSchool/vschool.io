                            "sub_nav_link": {
                                "type": "Link",
                                "config": {
                                    "select": "document",
                                    "label": "Sub Nav Link"
                                }
                            },
                            "start_date": {
                                "type": "Link",
                                "config": {
                                    "select": "document",
                                    "customtypes": ["start_date"],
